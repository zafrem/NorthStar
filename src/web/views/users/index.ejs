<%- include('../layouts/main', { body: `
<div class="page-header">
  <h1>Users</h1>
  <p class="page-subtitle">Manage all users</p>
</div>

<div class="card">
  <div class="card-body">
    ${users.length === 0 ? '<p class="text-muted">No users found.</p>' : `
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Organization</th>
          <th>Job Function</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        ${users.map(u => `
        <tr>
          <td><a href="/users/${u.id}">${u.name}</a></td>
          <td>${u.email}</td>
          <td><a href="/organizations/${u.orgId}">${orgMap.get(u.orgId) || 'Unknown'}</a></td>
          <td>${u.jobFunction || '-'}</td>
          <td>
            <a href="/users/${u.id}" class="btn btn-sm btn-secondary">View</a>
            <a href="/users/${u.id}/edit" class="btn btn-sm btn-primary">Edit</a>
          </td>
        </tr>
        `).join('')}
      </tbody>
    </table>
    `}
  </div>
</div>
` }) %>
