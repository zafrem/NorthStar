<%- include('../layouts/main', { body: `
<div class="page-header">
  <h1>App Settings</h1>
  <p class="page-subtitle">Configure application-wide settings</p>
</div>

<div class="card">
  <div class="card-header">
    <h2>Server Configuration</h2>
  </div>
  <div class="card-body">
    <dl class="config-list">
      <div class="config-item">
        <dt>Database Path</dt>
        <dd><code>${config.dbPath}</code></dd>
      </div>
      <div class="config-item">
        <dt>Web Port</dt>
        <dd><code>${config.webPort}</code></dd>
      </div>
      <div class="config-item">
        <dt>Web UI Status</dt>
        <dd><span class="badge badge-success">Enabled</span></dd>
      </div>
    </dl>
  </div>
</div>

<div class="card">
  <div class="card-header">
    <h2>Custom Settings</h2>
  </div>
  <div class="card-body">
    ${settings.length === 0 ? '<p class="text-muted">No custom settings configured.</p>' : `
    <table class="table">
      <thead>
        <tr>
          <th>Key</th>
          <th>Value</th>
          <th>Type</th>
          <th>Description</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        ${settings.map(setting => `
        <tr>
          <td><code>${setting.key}</code></td>
          <td><code>${setting.value}</code></td>
          <td><span class="badge">${setting.type}</span></td>
          <td>${setting.description || '-'}</td>
          <td>
            <form action="/settings/delete" method="POST" style="display: inline;">
              <input type="hidden" name="key" value="${setting.key}">
              <button type="submit" class="btn btn-sm btn-danger">Delete</button>
            </form>
          </td>
        </tr>
        `).join('')}
      </tbody>
    </table>
    `}
  </div>
</div>

<div class="card">
  <div class="card-header">
    <h2>Add New Setting</h2>
  </div>
  <div class="card-body">
    <form action="/settings" method="POST" class="form">
      <div class="form-row">
        <div class="form-group">
          <label for="key">Key</label>
          <input type="text" id="key" name="key" required placeholder="setting_key">
        </div>
        <div class="form-group">
          <label for="value">Value</label>
          <input type="text" id="value" name="value" required placeholder="setting_value">
        </div>
      </div>
      <div class="form-row">
        <div class="form-group">
          <label for="type">Type</label>
          <select id="type" name="type">
            <option value="string">String</option>
            <option value="number">Number</option>
            <option value="boolean">Boolean</option>
            <option value="json">JSON</option>
          </select>
        </div>
        <div class="form-group">
          <label for="description">Description (optional)</label>
          <input type="text" id="description" name="description" placeholder="Description of this setting">
        </div>
      </div>
      <button type="submit" class="btn btn-primary">Add Setting</button>
    </form>
  </div>
</div>
` }) %>
